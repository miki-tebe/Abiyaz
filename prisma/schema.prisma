datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Song {
  id        Int    @id @default(autoincrement())
  name      String
  youtubeId String
  Album     Album? @relation(fields: [albumId], references: [id])
  albumId   Int?
}

model Album {
  id            Int     @id @default(autoincrement())
  name          String
  albumCoverUrl String?
  songs         Song[]
  Artist        Artist? @relation(fields: [artistId], references: [id])
  artistId      Int?
}

model Artist {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  albums Album[]
}
